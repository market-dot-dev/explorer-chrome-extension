{
  "manifest_version": 3,
  "name": "Market.dev Expert Filter",
  "version": "0.1.0",
  "description": "Hide GitHub content from non-experts using the Market.dev experts API.",
  "host_permissions": [
    "https://github.com/*",
    "https://*.github.com/*",
    "https://*.market.dev/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["content.js"]
    }
  ]
}
